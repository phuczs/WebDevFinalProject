    }

    .btn-group .btn-primary {
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
    }

    .btn-group .dropdown-toggle-split {
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
