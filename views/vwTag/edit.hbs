<form action="" method="post">
  <div class="card">
    <h5 class="card-header">
      Edit Tag
    </h5>
    <div class="card-body">
      <div class="form-group">
        <label for="txtCatID">#</label>
        <input type="text" name="tag_id" id="txtCatID" class="form-control" readonly value="{{this.tag.tag_id}}">
      </div>
      <div class="form-group">
        <label for="txtCatName">Tag Name</label>
        <input type="text" name="tag_name" id="txtCatName" class="form-control" placeholder="" value="{{this.tag.tag_name}}">
      </div>
    </div>
    <div class="card-footer">
      <a class="btn btn-outline-success" href="/admin/tags" role="button">
        <i class="bi bi-skip-backward-fill"></i>
        List
      </a>
      <button type="submit" class="btn btn-danger" formaction="/admin/tags/del">
        <i class="bi bi-trash"></i>
        Delete
      </button>
      <button type="submit" class="btn btn-primary" formaction="/admin/tags/patch">
        <i class="bi bi-check2"></i>
        Save
      </button>
    </div>
  </div>
</form>