<div class="card shadow-lg mb-5 bg-white rounded">
  <h5 class="card-header text-center bg-gradient text-white justify-content-center" style="background: linear-gradient(45deg, #007bff, #00c6ff);">
    <strong>NEWS</strong>
  </h5>
  {{#if this.empty}}
  <div class="card-body text-center text-muted">
    Không có dữ liệu.
  </div>
  {{else}}
  <div class="card-body">
    <div class="d-flex flex-wrap justify-content-between">
      {{#each this.articles}}
      <div class="col-md-6 mb-4 d-flex">
        <div class="card h-100 flex-fill shadow-sm">
          <a href="/articles/detail?id={{NewsID}}">
            <img src="/static/imgs/news/{{NewsID}}/main_thumbs.jpg" alt="{{Title}}" class="card-img-top rounded-top" title="{{Title}}">
          </a>
          <div class="card-body">
            <span class="badge badge-info mb-2">{{tag_name}}</span>
            {{#if is_premium}}
            <span class="badge badge-warning mb-2"><i class="bi bi-gem"></i> Premium</span>
            {{else}}
            <span class="badge badge-secondary mb-2"><i class="bi bi-person"></i> Free</span>
            {{/if}}
            <h5 class="card-title" style="color: #333; font-weight: bold; font-size: 1.25rem;">{{Title}}</h5>
            <p class="card-text text-muted">{{Abstract}}</p>
            <a href="/articles/detail?id={{NewsID}}" class="btn btn-outline-primary btn-sm">Read More</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <div class="d-flex justify-content-center mt-4">
      <ul class="pagination">
        <li class="page-item disabled">
          <a class="page-link">Previous</a>
        </li>
        {{#each this.pageNumbers}}
        {{#if active}}
        <li class="page-item active">
          <a class="page-link" href="#">{{value}}</a>
        </li>
        {{else}}
        <li class="page-item">
          <a class="page-link" href="?id={{../tagId}}&page={{value}}">{{value}}</a>
        </li>
        {{/if}}
        {{/each}}
        <li class="page-item">
          <a class="page-link" href="#">Next</a>
        </li>
      </ul>
    </div>
  </div>
  {{/if}}
  <div class="card-footer text-muted text-center">
    Footer
  </div>
</div>

<style>
.card-body {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #f8f9fa;
  border-radius: 10px;
}

.card {
  flex: 1 1 calc(50% - 1rem);
  margin: 0.5rem;
  transition: transform 0.2s;
}

.card:hover {
  transform: scale(1.02);
}

.pagination {
  display: flex;
  justify-content: center;
  margin-top: 1rem;
}

.card-header {
  font-size: 1.5rem;
  padding: 1rem;
  border-bottom: 2px solid #00c6ff;
}

.card-title {
  font-size: 1.25rem;
  margin-bottom: 0.5rem;
}

.badge-info {
  background-color: #17a2b8;
  color: #fff;
}
</style>